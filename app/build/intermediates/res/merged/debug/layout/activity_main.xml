<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context="conversorieee.studio.com.conversorieee.MainActivity"
    android:background="@drawable/money_background">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/realid"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/white" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/ieneid"
        android:layout_below="@+id/dolarid"
        android:layout_alignRight="@+id/dolarid"
        android:layout_alignEnd="@+id/dolarid"
        android:layout_marginTop="60dp"
        android:src="@drawable/jpy" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/libraid"
        android:layout_alignTop="@+id/ieneid"
        android:layout_alignLeft="@+id/euroid"
        android:layout_alignStart="@+id/euroid"
        android:src="@drawable/gbp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titulo"
        android:background="@android:color/transparent"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/dolarid"
        android:background="@drawable/usd"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/euroid"
        android:background="@drawable/eur"
        android:layout_alignTop="@+id/dolarid"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />


</RelativeLayout>
