<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="conversorieee.studio.com.conversorieee.DolarActivity"
    android:background="@drawable/fundomoney">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETORNAR"
        android:id="@+id/retornarid"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="#ffffff" />

    <TableLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="O valor em Dólar é:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_marginTop="38dp"
            android:background="#ffffff"
            android:textSize="30dp"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/valordolarid"
            android:layout_marginTop="91dp"
            android:background="#ffffff"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="28dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />



    </TableLayout>
</RelativeLayout>
