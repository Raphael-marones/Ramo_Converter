<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context="conversorieee.studio.com.conversorieee.MainActivity"
    android:background="@drawable/money_bg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/dolarid"
        android:layout_alignRight="@+id/dolarid"
        android:layout_alignEnd="@+id/dolarid"
        android:layout_marginTop="50dp"
        android:id="@+id/ieneid"
        android:src="@drawable/iene_button"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/ieneid"
        android:layout_alignLeft="@+id/euroid"
        android:layout_alignStart="@+id/euroid"
        android:id="@+id/libraid"
        android:src="@drawable/lib_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:text="Inserir valor em reais:"
        />

    <EditText
        android:id="@+id/realid"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_txt"
        android:textColor="@android:color/black"
        android:background="#ffffff"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/dolarid"
        android:layout_toRightOf="@+id/dolarid"
        android:layout_toEndOf="@+id/dolarid"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/euroid"
        android:background="@drawable/eur_button"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/realid"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/dolarid"
        android:background="@drawable/usd_button"
        />

    <TextView
        android:text="DÃ³lar"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/dolarid"
        android:layout_alignLeft="@+id/dolarid"
        android:layout_alignStart="@+id/dolarid"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:text="Euro"
        android:id="@+id/textView6"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/euroid"
        android:layout_alignLeft="@+id/euroid"
        android:layout_alignStart="@+id/euroid"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"/>

    <TextView
        android:text="Iene"
        android:id="@+id/textView7"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/ieneid"
        android:layout_alignLeft="@+id/ieneid"
        android:layout_alignStart="@+id/ieneid"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:text="Libra"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/libraid"
        android:layout_alignLeft="@+id/libraid"
        android:layout_alignStart="@+id/libraid"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />


</RelativeLayout>
