<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context="conversorieee.studio.com.conversorieee.MainActivity"
    android:background="@drawable/fundomoney">

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/realid"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/dolarid"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/dolar" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/euroid"
        android:layout_alignTop="@+id/dolarid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/euro" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/yeneid"
        android:layout_below="@+id/dolarid"
        android:layout_alignRight="@+id/dolarid"
        android:layout_alignEnd="@+id/dolarid"
        android:layout_marginTop="60dp"
        android:src="@drawable/yene" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/libraid"
        android:layout_alignTop="@+id/yeneid"
        android:layout_alignLeft="@+id/euroid"
        android:layout_alignStart="@+id/euroid"
        android:src="@drawable/libra"
        android:contentDescription="" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inserir valor em reais"
        android:background="@android:color/white"
        android:id="@+id/textView"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
