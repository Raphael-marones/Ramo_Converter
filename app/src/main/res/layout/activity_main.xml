<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context="conversorieee.studio.com.conversorieee.MainActivity"
    android:background="@drawable/money_bg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ieneid"
        android:layout_below="@+id/dolarid"
        android:layout_alignRight="@+id/dolarid"
        android:layout_alignEnd="@+id/dolarid"
        android:layout_marginTop="60dp"
        android:src="@drawable/yene" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/libraid"
        android:layout_alignTop="@+id/ieneid"
        android:layout_alignLeft="@+id/euroid"
        android:layout_alignStart="@+id/euroid"
        android:src="@drawable/libraesterlinasimbolos"
        android:contentDescription="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:text="Inserir valor em reais:"
        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_txt"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/realid"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:id="@+id/dolarid"
        android:background="@drawable/dolar"
        android:layout_below="@+id/realid"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/euroid"
        android:background="@drawable/eurosymbol"
        android:layout_alignTop="@+id/dolarid"
        android:layout_toRightOf="@+id/dolarid"
        android:layout_toEndOf="@+id/dolarid"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />


</RelativeLayout>
